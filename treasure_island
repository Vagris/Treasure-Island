decision = (input("You're on the crossroads. Will you go 'left' of 'right'?\n")).lower()
if decision == "right":
  print("You fell from the rock.\nGame over.")
else:
  print("The lake is seen nearby")

  decision2 = (input("You are on the shore of the lake. There ia an island nearby. \nWill you wait for the boat or swim?\n")).lower()
  if decision2 == "swim":
    print("large group of pirahnas attacked you.\nGame over")
  
  else:
    print("you reached the island and see a house in center of the island")
    decision3 = (input("You see 3 doors in the house. Which door will you open?\n Red, Yellow of Brown?\n")).lower()

    if decision3 == "red":
      print("Large explosion killed you.\nGame over.")
  
    elif decision3 == "blue":
      print("Hungry vampire attacked you.\nGame over")
  
    elif decision3 == "yellow":
      print("you find the room full of golden coins!\nYou win!")
    else:
      print("you entered wrong answer.\nGame over.")
